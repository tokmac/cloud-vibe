@using Cloud_Vibe.Utilities
@model ICollection<Cloud_Vibe.Models.ViewModels.CommentViewModel>

<div class="container">
    <div class="row">
        <div class="row jumbotron col-md-6 col-md-offset-3">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <textarea id="text-comments" rows="9" name="comment" required placeholder="Add comment..." class="form-control"></textarea>
                </div>
            </div>
            <hr />
            <div class="row">
                <span class="input-group input-group-lg col-md-4 col-md-offset-4">
                    <button id="btn-add-comment" class="btn btn-lg btn-block btn-warning" type="submit">Add Comment</button>
                </span>
            </div>
        </div>
    </div>
    <hr />

    <div class="row-centered">
        <div id="loader">
            <img src="~/Content/images/ajax-loader.gif" alt="loading comments..." />
        </div>
    </div>

    <div id="container-comments">
    </div>
</div>

