@model Cloud_Vibe.Models.RegisterViewModel

<div class="col-centered col-md-6 container-transparent">
    <div class="row">
        <h4><em>Sign up</em></h4>
        <div>
            <p><em>You remembered something? <a href="javaScript:void(0);" class="custom-a-white" onclick="loadIndexContainer()">Go back</a></em></p>
        </div>
    </div>
    <br />
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 col-md-offset-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control transparent-input" })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 col-md-offset-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control transparent-input" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-md-offset-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control transparent-input" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Username, new { @class = "col-md-2 col-md-offset-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control transparent-input" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-md-offset-2 control-label" })
            <div class="col-md-6">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control transparent-input" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-md-offset-2 control-label" })
            <div class="col-md-6">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control transparent-input" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-centered">
                <div class="form-group">
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                            <img data-src="holder.js/100%x100%" alt="100%x100%" data-holder-rendered="true" style="height: 100%; width: 100%; display: block;">
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 12px;"></div>
                        <div>
                            <span class="btn btn-info btn-embossed btn-file">
                                <span class="fileinput-new"><span class="fui-image"></span>&nbsp;&nbsp;Select image</span>
                                <span class="fileinput-exists"><span class="fui-gear"></span>&nbsp;&nbsp;Change</span>
                                <input type="hidden" value="" name="Avatar"><input type="file" name="Avatar">
                            </span>
                            <a href="#" class="btn btn-info btn-embossed fileinput-exists" data-dismiss="fileinput"><span class="fui-trash"></span>&nbsp;&nbsp;Remove</a>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Avatar, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-centered col-md-4">
                <label class="checkbox" for="checkbox1">
                    <input type="checkbox" value="true" data-val-required="The hasAgreedWithTerms field is required." name="hasAgreedWithTerms" id="checkbox1" data-toggle="checkbox" class="custom-checkbox"><span class="icons"><span class="icon-unchecked"></span><span class="icon-checked"></span></span>
                    @Html.ActionLink("I agree to the terms of use", "TermsOfAgree", "Info", new { @class = "custom-a-white", style = "font-weight:bold;" })
                    @Html.ValidationMessageFor(m => m.hasAgreedWithTerms, "", new { @class = "text-danger" })
                </label>
            </div>
        </div>
        <br/>
        <div class="form-group">
            <input type="submit" class="btn btn-hg btn-info" value="Register" />
        </div>
    }
    <div>
        <p><em>You remembered something? <a href="javaScript:void(0);" class="custom-a-white" onclick="loadIndexContainer()">Go back</a></em></p>
    </div>
</div>
