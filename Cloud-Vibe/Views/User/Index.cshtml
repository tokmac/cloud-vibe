@using Cloud_Vibe.Data
@using Cloud_Vibe.Utilities
@model List<Cloud_Vibe.Data.Models.Album>
@{
    ViewBag.Title = "Index";
    ICloudVibeData data = new CloudVibeData(new CloudVibeDbContex());
}

<div class="container center-block">
    <div class="row vertical-center-row">
        <div class="col-lg-12">
            <div class="row ">
                <div class="col-lg-10 col-xs-offset-1">

                    <div id="myCarousel" class="carousel slide" data-interval="true">
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/Content/images/carosel_1.jpg" />
                            </div>
                            <div class="item">
                                <img src="~/Content/images/carosel_2.jpg" />
                                <div class="carousel-caption">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



<div class="container container-md-height">
    <div class="row col-xs-offset-1 row-md-height">
        <div class="col-md-6 col-md-height">
            <h3>Latest Albums</h3>
        </div>
    </div>
    @for (int i = 0; i < Model.Count; i++)
    {
        var albumImg = Model[i].CoverArt;
        var imgSrc = FilesByteUtility.ByteArrayToImageSrcString(albumImg);
        <div class="row row-md-height">
            <div class="col-xs-offset-1 row-md-height">
                <div class="col-md-height">

                    
                </div>
                <div class="col-md-height">
                    <img src="@imgSrc" style="float:left;height:170px; margin-right:10px" class="img-rounded img-responsive" />
                    <h3>@Model[i].Title</h3>
                    <h5>@Model[i].Artist.Name</h5>
                </div>
                <div class="col-md-height">
                    <p>
                        Shared on: @Model[i].SharedOn
                        @if (Model[i].UserShared != null)
                        {
                            @Model[i].UserShared.UserName;
                        }
                    </p>
                </div>


            </div>
        </div>
    }
</div>
