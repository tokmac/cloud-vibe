@model Cloud_Vibe.Models.ViewModels.ShareSongViewModel

<div class="col-centered col-md-7 custom-jumbotron">
    <div class="row">
        <h1><em>Share Song</em></h1>
    </div>
    <br />
    <div class="row">
        @using (Html.BeginForm("ShareSong", "User", FormMethod.Post, new { @class = "form-horizontal ", role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Title, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.ArtistName, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.ArtistName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ArtistName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Year, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Year, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.CoverArt, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 300px; max-height: 300px; line-height: 12px;"></div>
                        <div>
                            <span class="btn btn-primary btn-embossed btn-file">
                                <span class="fileinput-new"><span class="fui-image"></span>&nbsp;&nbsp;Select image</span>
                                <span class="fileinput-exists"><span class="fui-gear"></span>&nbsp;&nbsp;Change</span>
                                <input type="hidden" value="" name="CoverArt"><input type="file" name="CoverArt">
                            </span>
                            <a href="#" class="btn btn-primary btn-embossed fileinput-exists" data-dismiss="fileinput"><span class="fui-trash"></span>&nbsp;&nbsp;Remove</a>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.CoverArt, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Torrent, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="input-group">
                            <div class="form-control uneditable-input" data-trigger="fileinput">
                                <span class="fui-clip fileinput-exists"></span>
                                <span class="fileinput-filename"></span>
                            </div>
                            <span class="input-group-btn btn-file">
                                <span class="btn btn-default fileinput-new" data-role="select-file">Select file</span>
                                <span class="btn btn-default fileinput-exists" data-role="change"><span class="fui-gear"></span>&nbsp;&nbsp;Change</span>
                                <input type="hidden"><input type="file" name="Torrent">
                                <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput"><span class="fui-trash"></span>&nbsp;&nbsp;Remove</a>
                            </span>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.Torrent, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.VideoLink, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.VideoLink, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.VideoLink, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-hg btn-info" value="Share" />
            </div>
        }
    </div>

</div>




<script>
    $(function () {
        $(".validation-summary-errors").addClass('alert alert-danger');
        $(".validation-summary-errors").prepend('<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>')
    });
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
