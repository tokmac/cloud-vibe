@model Cloud_Vibe.Models.ViewModels.ShareAlbumViewModel

@using (Html.BeginForm("ShareAlbum", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <h4>Validation Errors</h4>
            @Html.ValidationSummary()
        </div>
    }
    @Html.ValidationSummary("", new { @class = "alert alert-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ArtistName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ArtistName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Year, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CoverArt, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="form-group">
                <div class="fileinput fileinput-new" data-provides="fileinput">
                    <div class="fileinput-new thumbnail" style="width: 260px; height: 260px;">
                        <img data-src="holder.js/100%x100%" alt="100%x100%" data-holder-rendered="true" style="height: 100%; width: 100%; display: block;">
                    </div>
                    <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 260px; max-height: 260px; line-height: 12px;"></div>
                    <div>
                        <span class="btn btn-primary btn-embossed btn-file">
                            <span class="fileinput-new"><span class="fui-image"></span>&nbsp;&nbsp;Select image</span>
                            <span class="fileinput-exists"><span class="fui-gear"></span>&nbsp;&nbsp;Change</span>
                            <input type="hidden" value="" name="CoverArt"><input type="file" name="CoverArt">
                        </span>
                        <a href="#" class="btn btn-primary btn-embossed fileinput-exists" data-dismiss="fileinput"><span class="fui-trash"></span>&nbsp;&nbsp;Remove</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Torrent, new { @class = "col-md-2 control-label" })
        <div class="fileinput fileinput-new" data-provides="fileinput">
            <div class="input-group">
                <div class="form-control uneditable-input" data-trigger="fileinput">
                    <span class="fui-clip fileinput-exists"></span>
                    <span class="fileinput-filename"></span>
                </div>
                <span class="input-group-btn btn-file">
                    <span class="btn btn-default fileinput-new" data-role="select-file">Select file</span>
                    <span class="btn btn-default fileinput-exists" data-role="change"><span class="fui-gear"></span>&nbsp;&nbsp;Change</span>
                    <input type="hidden"><input type="file" name="Torrent">
                    <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput"><span class="fui-trash"></span>&nbsp;&nbsp;Remove</a>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.VideoLink, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.VideoLink, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Share" />
        </div>
    </div>
}
<script>
    $(function () {
        $(".validation-summary-errors").addClass('alert alert-danger');
        $(".validation-summary-errors").prepend('<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>')
    });
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}